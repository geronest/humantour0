<section class="toppart">
  <div class="row">  
  <br><br><br><br><br><br> 
  <% if !flash[:alert].nil? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
  <% end %>
  </div>
</section>

<section class="write" style="background: #996633;">
  <div class="row">
      <h3 class="form-heading">게시글 수정하기</h3>
      <form action="/wall/edit_complete" method="post">
        <input type="hidden" name="id" value="<%= @post.id %>">
        <p>+ 분류
          <select name="post_category">
            <option value="tour">여행기</option>
            <option value="interview">인터뷰</option>
          </select></p>
          <p><input class="form-input" type="text" name="post_title" value="<%= @post.title %>"></p>
          <p><textarea class="form-textarea" name="post_content"><%= @post.content %></textarea></p>
          <input class="btn btn-lg btn-block" type="submit" value="수정하기">
      </form>
  </div>
</section>
