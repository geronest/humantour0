 <section class="toppart"> 
  <div class="row">
  <br><br><br><br><br><br>
  <% if !flash[:alert].nil? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
  <% end %>
  </div>
</section>

<% if @post.id % 3 == 0 %>
<section class="post_detail" style="background: #000099">
<% elsif @post.id % 3 == 1 %>
<section class="post_detail" style="background: #FF6600">
<% elsif @post.id % 3 == 2 %>
<section class="post_detail" style="background: #007A00">
<% end %>
  <h2>Stories</h2>
  <div class="row">
      <img class="img-rounded" src="<%= @post.image_url(:medium) %>" align="right">
  </div>
  <div class="row">
      <h3>+ <%= @post.title %></h3>
      <p><%= @post.content %></p>
      <p><a href="/wall/edit/<%= @post.id %>">수정</a> | <a href="/wall/delete_complete/<%= @post.id %>">삭제</a> || <a href="/">전체 리스트 가기</a></p>
      <hr />
      <% @post.comments.each do |comment| %>
      <p><strong><%= comment.user.username %></strong> <%= comment.content %> | <a href="/wall/delete_comment_complete/<%= comment.id %>">삭제</a></p>
      <% end %>
      <form class="text-left" action="/wall/write_comment_complete" method="post">
        <input type="hidden" name="post_id" value="<%= @post.id %>">
        <% if !@comment_writer.nil? %>
        <p><strong><%= @comment_writer.username %></strong> <input type="text" name="comment_content" placeholder="댓글 내용을 입력하세요."> <input type="submit" value="달기"></p>
        <% end %>
      </form>
  </div>
</section>


