<link rel="stylesheet" href="/css/sections_write.css"> 
<section class="margin">
  <div class="row">
    <p style="margin-bottom:120px;"></p>
  </div>
</section>

 <section class="toppart"> 
  <div class="row">
  <% if !flash[:alert].nil? %>
  <div class="alert alert-danger">
  <p style="text-align: center;">  <%= flash[:alert] %></p>
  </div>
  <% end %>
  </div>
</section>


<section class="write" style="background: #996633;">
  <div class="row">
      <h3 class="form-heading">글쓰기</h3>
      <form action="/wall/write_complete" method="post" enctype="multipart/form-data">
        <p>+ 분류
        <select name="post_category">
          <option value="tour">여행기</option>
          <option value="interview">인터뷰</option>
        </select></p>
        <p><input class="form-input" type="text" name="post_title" placeholder="제목을 입력하세요."></p>
        <p><textarea class="form-textarea" name="post_content" placeholder="내용을 입력하세요."></textarea></p>
        <p>+ 사진 업로드</p>
        <p><input type="file" name="image" style="width: 300px; border: 5px solid #ccc; -webkit-border-radius: 10px; border-radius: 10px; "></p>
        <input class="btn btn-lg btn-block"  type="submit" value="추가하기" style="width: 100px; border: 5px solid #ccc; -webkit-border-radius: 10px; border-radius: 10px;">
      </form>
  </div>
</section>
